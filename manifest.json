{
    "manifest_version": 3,
    "name": "Twitch Chat Translation",
    "description": "Translate Twitch Chat to the specified language using DeepL Translate or Google Translate. This extension allows you to always translate your chats without reloading.",
    "version": "1.0",
    "icons": {
        "48": "images/icon-48.png"
    },
    "background": {
        "service_worker": "scripts/background.js",
        "persisten": false
    },
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": ["https://www.twitch.tv/*"],
            "exclude_matches": [],
            "js": ["scripts/content-script.js"]
        }
    ],
    "action": {
        "default_icon": {
            "48": "images/icon-48.png"
        }
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://api-free.deepl.com/*"
    ],
    "options_ui": {
        "page": "config.html",
        "open_in_tab": false
    }
}